# lxpanel <profile> config file. Manually editing is not recommended.
# Use preference dialog in lxpanel to adjust config when you can.

Global {
  edge=top
  monitor=1
  height=24
  transparent=1
  background=0
  tintcolor=#000000
  alpha=127
  usefontcolor=1
  fontcolor=#ffffff
  autohide=0
  setdocktype=1
  setpartialstrut=1
  heightwhenhidden=0
}
Plugin {
  type=taskbar
  Config {
    ShowAllDesks=0
    SameMonitorOnly=-1
    MaxTaskWidth=150
  }
}
Plugin {
  type=dclock
  Config {
    ClockFmt=%R
    TooltipFmt=%A %x
    BoldFont=0
    IconOnly=0
    CenterText=0
  }
}
